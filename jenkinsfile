pipeline {
    agent {
        docker {
            image 'cypress/browsers'
            args '--entrypoint=""'
        }
    }
    environment {
        CYPRESS_grep = '@login'  
    }

    stages {

        stage('Install Dependencies') {
            steps {
                script {
                    sh 'npm ci'
                }
            }
        }

        stage('Run Cypress Tests - Target @login tests') {
            steps {
                script {
                    sh 'npx cypress run --env grep=${CYPRESS_grep}'
                }
            }
        }
/*
        stage('Run Cypress Tests') {
            steps {
                script {
                    sh 'npx cypress run'
                }
            }
        }
*/
    }

    post {
        always {
            junit '**/results/**/*.xml'
        }
    }
}
