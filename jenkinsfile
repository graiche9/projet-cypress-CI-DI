pipeline {
    agent {
        docker {
            image 'cypress/browsers'
            args '--entrypoint=""'
        }
    }

    stages {

        stage('Install Dependencies') {
            steps {
                script {
                    sh 'npm ci'
                }
            }
        }

        stage('Run Cypress Tests - login') {
            steps {
                sh 'npx cypress run --env grep=@login"'
            }
        }
/*
        stage('Run Cypress Tests') {
            steps {
                script {
                    sh 'npx cypress run'
                }
            }
        }
*/
    }

    post {
        always {
            junit 'results/login-test.xml'
        }
    }
}
