pipeline {
    agent {
        any {
            image 'cypress/browsers'
            args '--entrypoint=""'
        }
    }

    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    sh 'npm ci'
                }
            }
        }

        stage('Run Cypress Tests') {
            steps {
                script {
                    sh 'npx cypress run'
                }
            }
        }

    }

}
