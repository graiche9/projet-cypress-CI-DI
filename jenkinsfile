pipeline {
    agent {
        docker {
            image 'cypress/browsers'
            args '--entrypoint=""'
        }
    }

    stages {

        stage('Install Dependencies') {
            steps {
                script {
                    sh 'npm ci'
                }
            }
        }

        stage('Run Cypress Tests') {
            steps {
                script {
                    sh 'npx cypress run'
                }
            }
        }

        post ('gererations des rapport '){

        always {
        archiveArtifacts artifacts: 'cypress/reports/**/*.*', fingerprint:true
        }  
          
        }


    }

}
