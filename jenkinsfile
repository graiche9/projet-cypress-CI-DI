pipeline {
    agent {
        docker {
            image 'cypress/browsers'
            args '--entrypoint=""'
        }
    }

    stages {

        stage('Install Dependencies') {
            steps {
                script {
                    sh 'npm ci'
                }
            }
        }

        stage('Run Cypress Tests') {
            steps {
                script {
                    sh 'npx cypress run'
                }
            }
        }

        stage ('generate repport ')
        steps {

            sh 'mochawesome-merge cypress/results/*.json > cypress/results/report.json'
            sh 'mochawesome-report-generator cypress/results/report.json'
            archiveArtifacts artifacts: 'cypress/results/*.html', allowEmptyArchive: true

        }

    }

}
